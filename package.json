{
  "name": "programing_excercise_2019",
  "engines": {
  "node": "10.x"
  },
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nf start -j Procfile",
    "start:asciidocs": "nf start -j docs/Procfile",
    "start:slide": "nf start -j docs/slides/Procfile",
    "build": "webpack --config webpack.js",
    "deploy": "now",
    "deploy:local": "now dev",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.*",
    "watch": "watch 'npm-run-all format format' ./src ",
    "app": "npm-run-all app:*",
    "app:frontend": "browser-sync start --config bs-config.js",
    "docs:asciidocs:proxy": "browser-sync start --config docs/bs-config.js",
    "docs:asciidocs:build": "gradle asciidoctor",
    "docs:asciidocs:watch": "watch 'npm-run-all docs:asciidocs:build' ./docs/src",
    "docs:asciidocs:local": "gradle livereload",
    "docs:slide:build": "marp docs/slides/PITCHME.md -o docs/slides/index.html",
    "docs:slide:deploy": "cpx 'docs/slide/PITCHME.md' ./",
    "docs:slide:proxy": "browser-sync start --config docs/slides/bs-config.js",
    "docs:slide:watch": "marp -s docs/slides",
    "docs:slide:preview": "marp -p -w docs/slides"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k2works/programing_excercise_2019.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k2works/programing_excercise_2019/issues"
  },
  "homepage": "https://github.com/k2works/programing_excercise_2019#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "@prettier/plugin-ruby": "^0.15.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "connect-browser-sync": "^2.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "cpx": "^1.5.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.0",
    "cypress": "^3.8.1",
    "cypress-file-upload": "^3.5.1",
    "eslint": "^6.5.1",
    "foreman": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jshint": "^2.10.2",
    "markdown-to-html": "0.0.13",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.3",
    "now": "^16.7.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "@marp-team/marp-cli": "^0.15.0"
  }
}
